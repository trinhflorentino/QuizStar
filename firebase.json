{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/src/**",
      "**/*.ts",
      "**/*.tsx",
      "**/*.jsx",
      "**/*.map",
      "**/*.scss",
      "**/*.sass",
      "**/*.less",
      "**/webpack.config.js",
      "**/tailwind.config.js",
      "**/postcss.config.js",
      "**/package.json",
      "**/package-lock.json",
      "**/tsconfig.json",
      "**/.eslintrc*",
      "**/README.md"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "cleanUrls": true,
    "site": "quizstar-txqt"
  }
}
